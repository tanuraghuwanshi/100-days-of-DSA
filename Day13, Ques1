// You are given a rectangular matrix of integers. Starting from the outer boundary, traverse the matrix in a clockwise manner and continue moving inward layer by layer until all elements are visited.

#include <stdio.h>
void spiralOrder(int rows, int cols, int matrix[rows][cols]) {
    int top = 0, bottom = rows - 1;
    int left = 0, right = cols - 1;

    while (top <= bottom && left <= right) {
        for (int col = left; col <= right; col++) {
            printf("%d ", matrix[top][col]);
        }
        top++;

        for (int row = top; row <= bottom; row++) {
            printf("%d ", matrix[row][right]);
        }
        right--;
        if (top <= bottom) {
            for (int col = right; col >= left; col--) {
                printf("%d ", matrix[bottom][col]);
            }
            bottom--;
        }
        if (left <= right) {
            for (int row = bottom; row >= top; row--) {
                printf("%d ", matrix[row][left]);
            }
            left++;
        }
    }
}
int main() {
    int matrix[3][3] = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };
    spiralOrder(3, 3, matrix);
    return 0;
}
