// Given an integer array nums, rotate the array to the right by k steps, where k is non-negative.

#include <stdio.h>
void rotate(int nums[], int n, int k) {
    int temp[n];
    k = k % n; 
    for (int i = 0; i < k; i++) {
        temp[i] = nums[n - k + i];
    }
    for (int i = n - 1; i >= k; i--) {
        nums[i] = nums[i - k];
    }
    for (int i = 0; i < k; i++) {
        nums[i] = temp[i];
    }
}
int main() {
    int nums[] = {1, 2, 3, 4, 5, 6, 7};
    int n = sizeof(nums) / sizeof(nums[0]);
    int k = 3;
    rotate(nums, n, k);
    for (int i = 0; i < n; i++) {
        printf("%d ", nums[i]);
    }
    return 0;
}
